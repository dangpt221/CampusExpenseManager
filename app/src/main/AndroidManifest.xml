<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Các quyền ứng dụng cần (nếu cần thêm) -->
    <!-- <uses-permission android:name="android.permission.INTERNET" /> -->
    <!-- <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" /> -->
    <!-- <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" /> -->

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CampusExpensesManagermer">

        <!-- Login Activity - Entry Point -->
        <activity
            android:name=".Activities.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Home Activity -->
        <activity
            android:name=".Activities.HomeActivity" />

        <!-- Register Activity -->
        <activity
            android:name=".Activities.RegisterActivity" />

        <!-- Add Express Activity -->
        <activity
            android:name=".Activities.Expenses.AddExpressActivity"
            android:parentActivityName=".Activities.HomeActivity" />

        <!-- Add Budget Activity -->
        <activity
            android:name=".Activities.Budgets.AddBudgetActivity"
            android:parentActivityName=".Activities.HomeActivity" />

    </application>

</manifest>