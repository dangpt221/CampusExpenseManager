<?xml version="1.0" encoding="utf-8"?>
<!-- Sử dụng ConstraintLayout làm layout gốc để dễ dàng định vị các phần tử chính -->
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9F5F0"
    tools:context=".HistoryActivity">

    <!-- 1. HEADER (Thanh tiêu đề: Lịch sử & Quay lại) -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/header_layout"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:background="#FFDBA4"
        android:paddingHorizontal="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Nút Quay Lại -->
        <Button
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Quay lại"
            android:textColor="@android:color/black"
            android:background="@android:color/transparent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Tiêu đề Lịch sử -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lịch sử"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- 2. DATE NAVIGATION (Thanh điều hướng ngày tháng) -->
    <LinearLayout
        android:id="@+id/date_nav_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingVertical="12dp"
        android:background="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/header_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:src="@drawable/left"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Tháng trước"
            tools:ignore="HardcodedText" />
        <!-- Trong layout XML của bạn -->


        <TextView
            android:id="@+id/tvThisMonth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:padding="10dp"
            android:text="This month"
            android:textSize="16sp"
            android:textStyle="bold" />

        <ImageButton
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:src="@drawable/right"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Tháng sau"
            tools:ignore="HardcodedText" />

    </LinearLayout>

    <!-- 3. TRANSACTION LIST (Danh sách giao dịch) -->
    <!-- Sử dụng ScrollView để cuộn danh sách, trong thực tế nên dùng RecyclerView -->


    <!-- 4. BOTTOM NAVIGATION BAR (Thanh điều hướng dưới cùng) -->
    <!-- Trong ứng dụng thực tế nên dùng BottomNavigationView -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/bottom_nav_layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/date_nav_layout"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="Danh sách giao dịch"
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!-- MOCK TRANSACTION ITEM 1 (Mục giao dịch mẫu 1 - Chi tiêu) -->

            <!-- MOCK TRANSACTION ITEM 2 (Mục giao dịch mẫu 2 - Thu nhập) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="12dp">

                <!-- Đã đổi từ #EEEEEE sang màu trắng -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#EEEEEE"
                    android:paddingBottom="8dp"
                    android:text="02/01/2025"
                    android:textColor="#333333"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingTop="8dp">

                    <!-- Icon (Ví dụ dùng placeholder drawable) -->
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginEnd="12dp"
                        android:contentDescription="Icon Ngân hàng"
                        android:src="@drawable/iconbank" />

                    <!-- Tên giao dịch -->
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Thanh toán tiền thuê nhà"
                        android:textColor="@android:color/black"
                        android:textSize="16sp" />

                    <!-- Số tiền (Chi tiêu - Nền đỏ, chữ trắng) -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:paddingHorizontal="6dp"
                        android:paddingVertical="2dp"
                        android:text="- 1.000.000₫"
                        android:textColor="@android:color/black"
                        android:textSize="16sp"
                        android:textStyle="bold"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#EEEEEE"
                    android:paddingBottom="8dp"
                    android:text="01/01/2025"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold" /> <!-- Đã đổi từ #EEEEEE sang màu trắng -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingTop="8dp">

                    <!-- Icon (Ví dụ dùng placeholder drawable) -->
                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_marginEnd="12dp"
                        android:contentDescription="Icon Tiết kiệm"
                        android:src="@drawable/tiepkiem" />

                    <!-- Tên giao dịch -->
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Tiền lương"
                        android:textColor="@android:color/black"
                        android:textSize="16sp" />

                    <!-- Số tiền (Thu nhập - Nền xanh lá, chữ trắng) -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#38761D"
                        android:paddingHorizontal="6dp"
                        android:paddingVertical="2dp"
                        android:text="+ 4.000.000₫"
                        android:textColor="@android:color/black"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        tools:background="@color/white" />
                </LinearLayout>
            </LinearLayout>

            <!-- Bạn có thể thêm nhiều mục giao dịch mẫu khác tại đây -->

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/bottom_nav_layout"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="@android:color/white"
        android:elevation="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Trang chủ -->
        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/home"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Trang chủ"/>

        <!-- Ví -->
        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/wallet"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Ví"/>

        <!-- Lịch sử (Đang chọn) -->
        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/history"
            android:background="@android:color/white"
            android:contentDescription="History"/>

        <!-- Cá nhân -->
        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/user"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Cá nhân"/>
    </LinearLayout>

    <!-- Định nghĩa placeholder drawable icons (Bạn cần tạo các file icon này trong thư mục res/drawable) -->
    <requestFocus tools:ignore="PrivateResource" />

</androidx.constraintlayout.widget.ConstraintLayout>

    <!-- LƯU Ý QUAN TRỌNG VỀ GÓC BO TRÒN: -->
    <!-- Các số tiền đã được đổi sang chữ trắng và có nền màu (đỏ/xanh lá). -->
    <!-- Để có góc bo tròn đẹp mắt cho số tiền và thẻ giao dịch, bạn cần tạo các file shape drawable sau trong thư mục res/drawable: -->

    <!-- 1. rounded_card_background.xml (Nền trắng cho thẻ giao dịch): -->
    <!--
    <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
        <solid android:color="@android:color/white"/>
        <corners android:radius="8dp"/>
        <stroke android:width="1dp" android:color="#E0E0E0"/>
    </shape>
    -->

    <!-- 2. red_rounded_background.xml và green_rounded_background.xml (Tạo tag bo tròn cho số tiền): -->
    <!-- Nếu bạn muốn góc bo tròn cho số tiền, hãy tạo hai file này và thay thuộc tính 'background' trong code XML cho số tiền từ màu hardcoded sang @drawable/red_rounded_background và @drawable/green_rounded_background. -->