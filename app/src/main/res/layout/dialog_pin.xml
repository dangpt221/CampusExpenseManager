<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@android:color/white">

    <TextView
        android:id="@+id/tv_pin_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nhập mã PIN"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/tv_pin_subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nhập 4 chữ số"
        android:textSize="14sp"
        android:gravity="center"
        android:textColor="#757575"
        android:layout_marginBottom="24dp" />

    <!-- PIN Dots Indicator -->
    <LinearLayout
        android:id="@+id/pin_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginBottom="32dp">

        <View
            android:id="@+id/dot1"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_margin="8dp"
            android:background="@drawable/pin_dot_empty"
            android:backgroundTint="#CCCCCC" />

        <View
            android:id="@+id/dot2"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_margin="8dp"
            android:background="@drawable/pin_dot_empty"
            android:backgroundTint="#CCCCCC" />

        <View
            android:id="@+id/dot3"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_margin="8dp"
            android:background="@drawable/pin_dot_empty"
            android:backgroundTint="#CCCCCC" />

        <View
            android:id="@+id/dot4"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_margin="8dp"
            android:background="@drawable/pin_dot_empty"
            android:backgroundTint="#CCCCCC" />

    </LinearLayout>

    <!-- Hidden EditText to capture PIN input -->
    <EditText
        android:id="@+id/edt_pin_hidden"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:inputType="number"
        android:maxLength="4"
        android:visibility="invisible" />

    <!-- PIN Keypad -->
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:rowCount="4"
        android:alignmentMode="alignMargins"
        android:useDefaultMargins="false"
        android:layout_marginTop="16dp">

        <!-- Row 1 -->
        <Button
            android:id="@+id/btn_pin_1"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:text="1"
            android:textSize="24sp"
            android:backgroundTint="#E0E0E0"
            android:textColor="#212121" />

        <Button
            android:id="@+id/btn_pin_2"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:text="2"
            android:textSize="24sp"
            android:backgroundTint="#E0E0E0"
            android:textColor="#212121" />

        <Button
            android:id="@+id/btn_pin_3"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:text="3"
            android:textSize="24sp"
            android:backgroundTint="#E0E0E0"
            android:textColor="#212121" />

        <!-- Row 2 -->
        <Button
            android:id="@+id/btn_pin_4"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:text="4"
            android:textSize="24sp"
            android:backgroundTint="#E0E0E0"
            android:textColor="#212121" />

        <Button
            android:id="@+id/btn_pin_5"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:text="5"
            android:textSize="24sp"
            android:backgroundTint="#E0E0E0"
            android:textColor="#212121" />

        <Button
            android:id="@+id/btn_pin_6"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:text="6"
            android:textSize="24sp"
            android:backgroundTint="#E0E0E0"
            android:textColor="#212121" />

        <!-- Row 3 -->
        <Button
            android:id="@+id/btn_pin_7"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:text="7"
            android:textSize="24sp"
            android:backgroundTint="#E0E0E0"
            android:textColor="#212121" />

        <Button
            android:id="@+id/btn_pin_8"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:text="8"
            android:textSize="24sp"
            android:backgroundTint="#E0E0E0"
            android:textColor="#212121" />

        <Button
            android:id="@+id/btn_pin_9"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:text="9"
            android:textSize="24sp"
            android:backgroundTint="#E0E0E0"
            android:textColor="#212121" />

        <!-- Row 4 -->
        <Button
            android:id="@+id/btn_pin_clear"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:text="Xóa"
            android:textSize="18sp"
            android:backgroundTint="#FF9800"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/btn_pin_0"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:text="0"
            android:textSize="24sp"
            android:backgroundTint="#E0E0E0"
            android:textColor="#212121" />

        <Button
            android:id="@+id/btn_pin_backspace"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            android:text="⌫"
            android:textSize="24sp"
            android:backgroundTint="#F44336"
            android:textColor="@android:color/white" />

    </GridLayout>

    <TextView
        android:id="@+id/tv_pin_error"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="#F44336"
        android:textSize="12sp"
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:visibility="gone" />

</LinearLayout>



