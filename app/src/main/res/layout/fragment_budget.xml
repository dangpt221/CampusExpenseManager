<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context=".Fragments.BudgetFragment">

    <!-- PHáº¦N 1: SCROLL VIEW Vá»šI CONTENT -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#D3AE79"
                android:padding="20dp"
                android:gravity="center">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“Š Budget"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:gravity="center" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Manage monthly expenses"
                    android:textSize="14sp"
                    android:textColor="#F0F0F0"
                    android:gravity="center"
                    android:layout_marginTop="8dp" />
            </LinearLayout>

            <!-- Month Navigation -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="16dp"
                android:background="@android:color/white"
                android:elevation="2dp">

                <Button
                    android:id="@+id/btn_prev_month"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â—€ Prev"
                    android:textSize="12sp"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:backgroundTint="#D3AE79"
                    android:textColor="@android:color/white"/>

                <TextView
                    android:id="@+id/tv_current_month"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Month 1 2025"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:gravity="center"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"/>

                <Button
                    android:id="@+id/btn_next_month"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Next â–¶"
                    android:textSize="12sp"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:backgroundTint="#D3AE79"
                    android:textColor="@android:color/white"/>
            </LinearLayout>

            <!-- Summary Cards -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:spacing="8dp">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:cardCornerRadius="8dp"
                    android:layout_marginEnd="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="12dp"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Budget"
                            android:textSize="11sp"
                            android:textColor="#999999"/>

                        <TextView
                            android:id="@+id/tv_total_budget"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0 â‚«"
                            android:textStyle="bold"
                            android:textColor="#D3AE79"
                            android:textSize="16sp"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:cardCornerRadius="8dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="12dp"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Spent"
                            android:textSize="11sp"
                            android:textColor="#999999"/>

                        <TextView
                            android:id="@+id/tv_total_spent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0 â‚«"
                            android:textStyle="bold"
                            android:textColor="#FF9800"
                            android:textSize="16sp"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:cardCornerRadius="8dp"
                    android:layout_marginStart="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="12dp"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Remaining"
                            android:textSize="11sp"
                            android:textColor="#999999"/>

                        <TextView
                            android:id="@+id/tv_remaining"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0 â‚«"
                            android:textStyle="bold"
                            android:textColor="#4CAF50"
                            android:textSize="16sp"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

            <!-- Progress Bar -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingBottom="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Overall progress"
                    android:textSize="12sp"
                    android:textColor="#999999"
                    android:layout_marginBottom="4dp"/>

                <ProgressBar
                    android:id="@+id/budget_progress_bar"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:progress="0"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:progressDrawable="@drawable/progress_bar_style"/>
            </LinearLayout>

            <!-- Budget Items Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Expenses by category"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"/>

            <!-- Empty State -->
            <TextView
                android:id="@+id/tvEmptyState"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ“ No budgets yet. Add your first budget!"
                android:textSize="14sp"
                android:textColor="#999999"
                android:gravity="center"
                android:padding="32dp"
                android:visibility="gone" />

            <!-- RecyclerView -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_budget_items"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:paddingBottom="120dp"
                android:visibility="visible"
                tools:listitem="@layout/item_budget" />

        </LinearLayout>
    </ScrollView>

    <!-- PHáº¦N 2: FAB - PHáº¢I NGOÃ€I SCROLLVIEW -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_add_budget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_gravity="center_vertical|end"

        android:layout_marginEnd="16dp"
        android:layout_marginBottom="50dp"

        android:contentDescription="Add Budget"
        app:srcCompat="@android:drawable/ic_input_add"
        app:backgroundTint="#D3AE79"
        app:tint="@android:color/white" />

</FrameLayout>