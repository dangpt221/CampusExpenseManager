<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5"
    tools:context=".Fragments.ExpressFragment">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#D3AE79"
        android:padding="2dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="âš¡ Quick Expense"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:gravity="center" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Record expenses quickly"
            android:textSize="14sp"
            android:textColor="#F0F0F0"
            android:gravity="center"
            android:layout_marginTop="8dp" />
    </LinearLayout>

    <!-- ScrollView for input area -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Main Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@android:color/white"
                android:padding="5dp"
                android:layout_margin="5dp"
                android:elevation="4dp">

                <!-- Category Display -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="20dp"
                    android:background="#F9F9F9"
                    android:padding="12dp">

                    <ImageView
                        android:id="@+id/imgCategory"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:scaleType="centerInside"
                        android:layout_marginEnd="12dp"
                        android:contentDescription="Category icon" />

                    <TextView
                        android:id="@+id/tvSelectedCategory"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Category: Food"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#333333" />

                    <TextView
                        android:id="@+id/tvDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Date: 15/01/2025"
                        android:textSize="12sp"
                        android:textColor="#999999" />
                </LinearLayout>

                <!-- Amount Input -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Amount"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:layout_marginBottom="8dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/edit_text_background"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:layout_marginBottom="24dp">

                    <EditText
                        android:id="@+id/edtAmount"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:hint="0"
                        android:inputType="numberDecimal"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#D3AE79"
                        android:textColorHint="#CCCCCC"
                        android:gravity="center_vertical"
                        android:importantForAutofill="no" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â‚«"
                        android:textSize="32sp"
                        android:textStyle="bold"
                        android:textColor="#D3AE79"
                        android:layout_marginStart="8dp" />
                </LinearLayout>

                <!-- Name Input -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Expense name"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#333333"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:id="@+id/edtExpenseName"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/edit_text_background"
                    android:hint="e.g. Breakfast, Bus..."
                    android:inputType="text"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:textSize="16sp"
                    android:textColorHint="#CCCCCC"
                    android:layout_marginBottom="24dp"
                    android:importantForAutofill="no" />

                <!-- Action Buttons -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:spacing="12dp">

                    <Button
                        android:id="@+id/btnAddExpense"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:text="âœ“ Save"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:backgroundTint="#D3AE79"
                        android:textColor="@android:color/white"
                        android:layout_marginEnd="8dp" />

                    <Button
                        android:id="@+id/btnClear"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="1"
                        android:text="â†» Clear"
                        android:textSize="16sp"
                        android:backgroundTint="#CCCCCC"
                        android:textColor="@android:color/white"
                        android:layout_marginStart="8dp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Category Selection -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select category"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:paddingStart="16dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp" />

            <LinearLayout
                android:id="@+id/categoryContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:padding="8dp"
                android:background="@android:color/white"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="16dp"
                android:elevation="2dp" />
        </LinearLayout>
    </ScrollView>

    <!-- Empty State Text -->
    <TextView
        android:id="@+id/tvEmptyState"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ðŸ“ No expenses yet. Add your first expense!"
        android:textSize="16sp"
        android:textColor="#999999"
        android:gravity="center"
        android:padding="32dp"
        android:visibility="gone" />

    <!-- RecyclerView for List -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvExpenses"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:padding="8dp"
        tools:listitem="@layout/item_express" />

</LinearLayout>